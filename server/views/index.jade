//https://angular-ui.github.io/bootstrap/
doctype html
html
    head
        script(src="/static/build/client.js")
        link(rel="stylesheet", href="/static/build/vendor.css")
        link(rel="stylesheet", href="/static/build/main.css")
        title quote-list
    
    body(ng-app="quotemodule", ng-controller="quotecontroller")
        h1 {{ test }}
        h2 Kalbshack 6
        button.btn.btn-primary(type="button", ng-model="test", btn-checkbox, btn-checkbox-true="franz", btn-checkbox-false="josef") asdf asdf
        input(type="text", th-enter="doCapture()", ng-model="captureElement")
        ul
            li(ng-repeat="item in items") {{ item }}
                | &nbsp;
                select(ng-model="targetList", ng-options="o.name as o.name for o in lists", ng-change="moveToList()")
                | &nbsp;
                input(type="text", th-enter="newList()", ng-model="newListElement")

        h2 Next Steps
        div(ng-repeat="list in lists")
            div(ng-repeat="item in list.items", ng-show="item.nextStep && list.type === 'project'") {{ item.name }} - {{ list.name }} - {{ item.context }}
                | &nbsp;
                button(ng-click="deleteItemFromList()") done 
                select(ng-model="item.context", ng-options="o as o for o in contextTypes", ng-change="changeType()")

        h2 Lists
        div(ng-repeat="list in lists")
            h3 {{ list.name }}({{ list.type }} - {{ list.category }})
            select(ng-model="list.type", ng-options="o as o for o in listTypes", ng-change="changeType()")
            select(ng-model="list.category", ng-options="o as o for o in listCategory", ng-change="changeType()")
            br
            input(type="text", ng-blur="changeType()", ng-model="list.description", ng-show="list.type === 'project'")
            ul
                li(ng-repeat="item in list.items | orderBy:'orderNumber'")
                    span(ng-show="item.nextStep") next Step - 
                    | {{ item.name }}
                    button(ng-click="setNextStep()", ng-show="list.type === 'project'") next Step
                    button(ng-click="deleteItemFromList()") delete 
                    button(ng-click="itemPos('up')") up
                    button(ng-click="itemPos('down')") down

